{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "@typescript-eslint/no-unused-vars": "off",       // Disable unused-vars rule
    "react/no-unescaped-entities": "off",              // Disable unescaped entities warning
    "react-hooks/exhaustive-deps": "off",              // Disable missing dependencies in useEffect
    "@typescript-eslint/no-explicit-any": "off",       // Disable any type warnings
    "prefer-const": "off",                              // Disable prefer const rule (might wanna remove these these were used for the build purpose)
    "@typescript-eslint/no-empty-object-type": "off"
  }
}
